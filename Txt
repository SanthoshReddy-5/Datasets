import numpy as np
import pandas as pd

# Load the dataset
data = pd.read_csv('sports.csv')
print(data)

# Extract features and target from the dataset
feature = np.array(data)[:, :-1]
print("Features in the dataset:\n", feature)

target = np.array(data)[:, -1]
print("Target concept:\n", target)

# Initialize the hypothesis
hypothesis = np.array(feature[0])

# Apply the Find-S algorithm
for i, val in enumerate(target):
    if val == 'yes':
        hypothesis = feature[i].copy()
        break

for i, val in enumerate(feature):
    if target[i] == 'yes':
        for x in range(len(hypothesis)):
            if val[x] != hypothesis[x]:
                hypothesis[x] = '?'

# Print the final hypothesis
print("Final Hypothesis:\n", hypothesis)
